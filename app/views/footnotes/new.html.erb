<%= form_for([@post, @post.footnotes.new]) do |f| %>
  <div class="field">
    <%= f.label :link_text %><br />
    <%= f.text_field :link_text %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :index %><br />
    <%= f.text_field :index %>
  </div>
  <div class="actions">
    <%= f.submit 'Add' %>
  </div>
<% end %>
